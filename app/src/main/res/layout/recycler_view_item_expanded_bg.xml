<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_centerHorizontal="true"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            android:id="@+id/main_recycler_view_card_expanded_bg"


            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/main_recycler_view_constraint_expanded"
        >
            <ImageView android:layout_width="match_parent"
                       android:scaleType="centerCrop"
                       android:id="@+id/recycler_view_main_expanded_bg_image"
                       android:layout_height="143dp"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/recycler_view_main_expanded_bg_event_name"
                      android:text="Expanded - normal"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      android:fontFamily="@font/montserrat_bold"
                      android:layout_marginStart="16dp" android:layout_marginTop="8dp"
                      android:textSize="18sp" android:layout_marginEnd="8dp"
                      app:layout_constraintHorizontal_bias="0.0"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/recycler_view_main_expanded_bg_event_date"
                      android:text="Venerdi 9 Giugno 2019"
                      android:fontFamily="@font/montserrat_regular"
                      app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginStart="16dp"
                      app:layout_constraintTop_toBottomOf="@+id/recycler_view_main_expanded_bg_event_name"
            />

            <TextView
                    android:minWidth="60dp"
                    android:textAlignment="center"
                    android:text="22"
                    android:textSize="24sp"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/recycler_view_main_expanded_bg_event_days_value"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/recycler_view_main_expanded_bg_event_date"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/recycler_view_main_expanded_bg_event_hours_value"/>
            <TextView

                    android:text="gg"
                    android:fontFamily="@font/montserrat_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/recycler_view_main_expanded_bg_event_days_type"
                    app:layout_constraintStart_toStartOf="@+id/recycler_view_main_expanded_bg_event_days_value"
                    app:layout_constraintEnd_toEndOf="@+id/recycler_view_main_expanded_bg_event_days_value"
                    app:layout_constraintTop_toBottomOf="@+id/recycler_view_main_expanded_bg_event_days_value"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.0"/>

            <TextView
                    android:minWidth="60dp"
                    android:textAlignment="center"
                    android:text="22"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/recycler_view_main_expanded_bg_event_hours_value"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/recycler_view_main_expanded_bg_event_date"
                    app:layout_constraintStart_toEndOf="@+id/recycler_view_main_expanded_bg_event_days_value"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/recycler_view_main_expanded_bg_event_minutes_value"/>

            <TextView
                    android:fontFamily="@font/montserrat_light"
                    android:text="h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/recycler_view_main_expanded_bg_event_hours_type"
                    app:layout_constraintStart_toStartOf="@+id/recycler_view_main_expanded_bg_event_hours_value"
                    app:layout_constraintEnd_toEndOf="@+id/recycler_view_main_expanded_bg_event_hours_value"
                    app:layout_constraintTop_toBottomOf="@+id/recycler_view_main_expanded_bg_event_hours_value"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>

            <TextView
                    android:minWidth="60dp"
                    android:textAlignment="center"
                    android:text="22"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="24sp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/recycler_view_main_expanded_bg_event_minutes_value"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/recycler_view_main_expanded_bg_event_date"
                    app:layout_constraintStart_toEndOf="@+id/recycler_view_main_expanded_bg_event_hours_value"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/recycler_view_main_expanded_bg_event_seconds_value"/>

            <TextView

                    android:fontFamily="@font/montserrat_light"
                    android:text="m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/recycler_view_main_expanded_bg_event_minutes_type"
                    app:layout_constraintEnd_toEndOf="@+id/recycler_view_main_expanded_bg_event_minutes_value"
                    app:layout_constraintStart_toStartOf="@+id/recycler_view_main_expanded_bg_event_minutes_value"
                    app:layout_constraintTop_toBottomOf="@+id/recycler_view_main_expanded_bg_event_minutes_value"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.0"/>

            <TextView
                    android:minWidth="60dp"
                    android:textAlignment="center"
                    android:text="22"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="24sp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/recycler_view_main_expanded_bg_event_seconds_value"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/recycler_view_main_expanded_bg_event_date"
                    app:layout_constraintStart_toEndOf="@+id/recycler_view_main_expanded_bg_event_minutes_value"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                    android:fontFamily="@font/montserrat_light"
                    android:text="s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/recycler_view_main_expanded_bg_event_seconds_type"
                    app:layout_constraintStart_toStartOf="@+id/recycler_view_main_expanded_bg_event_seconds_value"
                    app:layout_constraintEnd_toEndOf="@+id/recycler_view_main_expanded_bg_event_seconds_value"
                    app:layout_constraintTop_toBottomOf="@+id/recycler_view_main_expanded_bg_event_seconds_value"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>